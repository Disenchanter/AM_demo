# YAML Lint configuration
# Suppresses lint warnings for AWS SAM build artifacts

rules:
  # Disable line-length check (SAM templates are often long)
  line-length: disable
  
  # Disable indentation check (SAM output can differ in formatting)
  indentation: disable
  
  # Disable comment check
  comments: disable
  
  # Disable document start check
  document-start: disable
  
  # Disable key-value consistency check
  key-value-consistent: disable
  
  # Disable empty-line check
  empty-lines: disable

# Ignore generated files and directories
ignore: |
  .aws-sam/build/
  **/build/
  **/dist/
  **/.aws-sam/build/**